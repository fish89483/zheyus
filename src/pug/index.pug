<!DOCTYPE html>
html(lang="zh-TW")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Document
        link(rel="stylesheet", href="css/main.css")

     
    body
        .a-cursor
            span
        .wrapper
            .o-carousel
                - var items = ['hide-top','top','center','bottom','hide-bottom']
                each item in items
                    .o-carousel__item(class=`-${item}`)

                        .o-carousel__txt
                            //- title
                            .m-carousel__txt-item
                                h2.m-carousel__title.t-title
                                p.m-carousel__txt.t-txt

                        .o-carousel__content
                            //- item
                            .m-carousel__item
                            //- kv
                            if item == 'center'
                                include include/kv.pug

                .o-carousel__count


                
            
    script(src="js/main.js")